#!/bin/bash

program=`basename $0`

ARGS=$(getopt -o acih? -l "all,images,container,help" -n "$program" -- "$@");

function usage() {
  cat <<EOT
Usage: $program
  --all (-a)
  --containers (-c)
  --images (-i)
  --help (-h|-?)
EOT
}

# Don't fail on error until after parsing
set -o errexit

# Replace args with parsed arguments
eval set -- "$ARGS";


while true; do
  case "$1" in
    -a|--all)
      shift;
      opt_containers=true
      opt_images=true
      break
      ;;
    -c|--containers)
      shift;
      opt_containers=true
      break
      ;;
    -i|--images)
      shift;
      opt_images=true
      break
      ;;
    -h|-?|--help)
      shift;
      usage
      exit 0
      ;;
    *)
      echo "Invalid argument $1"
      shift
      usage
      exit 1
      ;;
  esac
done

if [ -n "$opt_containers" ]; then
  echo 'Removing stopped containers'
  if ! docker rm $(docker ps -a -q); then
    echo 'Failed to remove running containers'
    docker ps -a
    exit 2
  fi
fi
if [ -n "$opt_images" ]; then
  echo 'Removing unused images'
  ids=$(docker images -q --filter "dangling=true")
  docker rmi $ids
fi
